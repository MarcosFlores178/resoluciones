<header>
  <div class="left">
    <h1 class="title"><a class="title" href="/">Si.Ge.Re</a></h1>
    <p class="subtitle">Sistema de Gestión de Resoluciones</p>
  </div>
  <div class="right">
    <nav>
      <ul>
        <% if (rol === "organizador") { %>
          <li><a href="/resoluciones/lista-resoluciones">Mis resoluciones</a></li>
          <li><a href="/resoluciones/form-resolucion">Nueva resolución</a></li>
          <li><a href="/auth/logout">Cerrar sesión</a></li>
          <li><span>👤 <%= user.nombre %> <%= user.apellido %></span></li>
          <% } else if (rol === "administrativo") { %>
            <li><a href="/resoluciones/lista-resoluciones">Resoluciones</a></li>
            <li><a href="/auth/logout">Cerrar sesión</a></li>
            <li><span>👤 <%= user.nombre %> <%= user.apellido %></span></li>
            <% } else if (rol==="superadmin") {%>
              <li><a href="/auth/logout">Cerrar sesión</a></li>
              <li><span>👤 <%= user.nombre %> <%= user.apellido %></span></li>
              <% } %>
               
      </ul>
    </nav>
  </div>
</header>