  <h1>Formulario de Resolución</h1>

  <form action="/resoluciones<%= datos?.id ? '/' + datos.id + '?_method=PUT' : '' %>" method="POST" class="formulario">

    <div class="form-grid">
      <div class="form-group">
        <label for="expediente">Número de expediente:</label>
        <input type="text" id="expediente" name="expediente" value="<%= datos?.expediente || '' %>">
      </div>

      <div class="form-group">
        <label for="resolucion_interes_departamental">Número de resolución interés departamental:</label>
        <input type="text" id="resolucion_interes_departamental" name="resolucion_interes_departamental" value="<%= datos?.resolucion_interes_departamental || '' %>">
      </div>

      <div class="form-group">
        <label for="curso">Nombre del curso:</label>
        <input type="text" id="curso" name="curso" required value="<%= datos?.curso || '' %>">
      </div>

      <div class="form-group">
        <label for="cohorte">Número de cohorte:</label>
        <input type="text" id="cohorte" name="cohorte" required value="<%= datos?.cohorte || '' %>">
      </div>

      <div class="form-group">
        <label for="docente">Nombre del docente:</label>
        <input type="text" id="docente" name="docente" required value="<%= datos?.docente || '' %>">
      </div>

      <div class="form-group">
        <label for="alumnos">Público específico:</label>
        <input type="text" id="alumnos" name="alumnos" required value="<%= datos?.alumnos || '' %>">
      </div>

      <div class="form-group full-width">
        <label for="objetivos">Objetivo del curso:</label>
        <textarea name="objetivos" id="objetivos" style="resize: none;" rows="6" cols="50"><%= datos?.objetivos || '' %></textarea>
      </div>

      <div class="form-group full-width">
        <label for="segundos_objetivos">Objetivos generales:</label>
        <textarea name="segundos_objetivos" id="segundos_objetivos" style="resize: none;" rows="6" cols="50"><%= datos?.segundos_objetivos || '' %></textarea>
      </div>

      <div class="form-group">
        <label for="horas_totales">Horas totales del curso:</label>
        <input type="text" id="horas_totales" name="horas_totales" required value="<%= datos?.horas_totales || '' %>">
      </div>

      <div class="form-group">
        <label for="clases">Cantidad de clases:</label>
        <input type="text" id="clases" name="clases" required value="<%= datos?.clases || '' %>">
      </div>

      <div class="form-group">
        <label for="horas_clase">Horas de cada clase:</label>
        <input type="text" id="horas_clase" name="horas_clase" required value="<%= datos?.horas_clase || '' %>">
      </div>

      <div class="form-group">
        <label for="minimo">Cantidad mínima de inscriptos:</label>
        <input type="text" id="minimo" name="minimo" required value="<%= datos?.minimo || '' %>">
      </div>

      <div class="form-group">
        <label for="maximo">Cantidad máxima de inscriptos:</label>
        <input type="text" id="maximo" name="maximo" required value="<%= datos?.maximo || '' %>">
      </div>

      <div class="form-group">
        <label for="mes_curso">Mes de dictado del curso:</label>
        <input type="text" id="mes_curso" name="mes_curso" required value="<%= datos?.mes_curso || '' %>">
      </div>

      <div class="form-group">
        <label for="fecha">Fecha de la resolución:</label>
        <input type="date" id="fecha" name="fecha" required value="<%= datos?.fecha || '' %>">
      </div>

      <div class="form-group">
        <label for="numero_resolucion">Número de resolución (opcional)</label>
        <input type="text" id="numero_resolucion" name="numero_resolucion" value="<%= datos?.numero_resolucion || '' %>">
      </div>
    </div>

    <div class="actions">
      <button type="submit" name="accion" value="guardar">Guardar plantilla</button>
      <button type="submit" name="accion" value="generar_pdf">Generar PDF</button>
      <a class="boton" href="/resoluciones/lista">Resoluciones</a>
    </div>

  </form>
</body>

</html>